    <title>Tech Blog</title>
</head>

<body>
    <header>
    <h1>Tech Blog</h1>
    <ul>
        <li id = "dashboard">
            Dashboard
        </li>
        <li id = "homepage">
            Homepage
        </li>
        <li id = "logout">
            Log out
        </li>
    </ul>
</header>

{{#each blogpost as |blogpost|}}
<div class="cardcontainer">
    <div id = "{{blogpost.id}}" class = "card">
        <div class = "title">
            <p>{{blogpost.title}}</p>
            <p id = "postedby">posted by {{blogpost.Profile.username}} on {{blogpost.created_at}}</p>
        </div>           
        <div class = "post">
            <p>{{blogpost.post}}</p>
        </div>
    </div>
</div>
{{/each}}

    <div id = "login">
      <button type="submit" id="newpost" class = "login">
            <span>
                  + New Post
            </span>
      </button>
    </div>

<footer>
    <h2>Thanks for visiting the blog!</h2>
</footer>